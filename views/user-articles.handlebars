
<div class="container col-sm-12">

    <div>
        <h1>My Articles:</h1>

        <button type="button" class="btn">Create New Article</button>

    </div>
    
    <div>
        {{#if userArticles}}
        <ul>
            {{#each userArticles}}
            <li>
                <h2>{{this.title}}</h2>
                <h3>Written by {{this.name}}</h3>
                <h4>Posted on {{this.timestamp}}</h4>
                <div>{{{this.content}}}</div>
                {{this.id}}
                <form name="deleteArticle" action="./delete-article" method="POST">
                    <input type="hidden" name="articleId" id="articleId" value="{{{this.articleId}}}">
                    <input type="submit" name="deleteArticle" value="Delete">
                </form>
            </li>
            {{/each}}
        </ul>
    

        
    
        {{else}}
        <p>You have no articles!</p>
        <button type="button" class="btn">Create New Article</button>

        {{/if}}
    </div>

</div>