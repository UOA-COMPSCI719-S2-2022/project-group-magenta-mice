<div class="container col-sm-12">
    <button type="button" class="btn" onclick="window.location.href='./login';" >Return to home page</button>
    <h2>{{article.title}}</h2>
    <h3>Written by {{article.name}}</h3>
    <h4>Posted on {{article.timestamp}}</h4>
    <div>{{{article.content}}}</div>
    <p>Tags: 
        <form action="./search-articles" method="post">
        {{#each tags}}
        <input type="submit" id="articleSearch" name="articleSearch" value="{{name}}" class="tags">
        {{/each}}
        </form> 
    </p>

    {{#if user}}
    <h5>Add Comment:</h5>
    <div><div class="form-group">
        <form action="./comments" method="post">
        <input type="hidden" id="articleId"  name="articleId" value="{{article.articleId}}" >
        <input type="text" name="comments" id="comment-box" class="txtbox" placeholder="Enter comment">
        <button id="post" class="btn">Post</button>
        </form>
    </div>
    {{/if}}

    <h5>Comments:</h5>
    <ul class="commentList">
        {{#each comments}}
        <li>
            <p>Written by {{name}}<img src="./avatar/{{avatar}}" width="30" > on {{this.timestamp}}</p> 
            <p>{{this.comments}}</p>
        </li>
        {{/each}}
    </ul>
</div>