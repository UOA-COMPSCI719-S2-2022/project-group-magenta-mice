<div class="container">
    {{#if toastMessage}}
    <p>{{toastMessage}}</p>
    {{/if}}

    <h1>New Account</h1>
    <form name="newForm" action="./submit" method="POST">
        <p>Choose your avatar:
            <label><input type="radio" name="avatar" id="blue" value="blue.png" {{#if B}}checked {{/if}} ><img src="./avatar/blue.png" width="90"></label>
            <label><input type="radio" name="avatar" id="girl" value="girl.png" {{#if G}}checked {{/if}}><img src="./avatar/girl.png" width="90"></label>
            <label><input type="radio" name="avatar" id="pink" value="pink.png" {{#if P}}checked {{/if}}> <img src="./avatar/pink.png" width="90"></label>
            <label><input type="radio" name="avatar" id="turtle" value="turtle.png" {{#if T}}checked {{/if}}><img src="./avatar/turtle.png" width="150"></label>
            <label><input type="radio" name="avatar" id="mouse" value="mouse.png" {{#if M}}checked {{/if}}> <img src="./avatar/mouse.png" width="90"></label>
            
        </p>
        <p>
            <label for="txtUsername">Username:</label>
            <input type="text" name="username" id="txtUsername" placeholder="must be unique" value={{username}}>
        </p>
        
        
        <p>
            <label for="txtPassword">Choose password:</label>
            <input type="password" name="password" id="txtPassword" placeholder="any combination of a.Z.1.8.$" value={{passowrd}}>
        </p>

        <p>
            <label for="txtPasswordRe">Re-enter password:</label>
            <input type="password" name="confirmedPassword" id="txtPasswordRe" placeholder="must be the same as the chosen one" 
            value={{confirmedPassword}} >
        </p>
        
        

        <p>
            <label for="txtName">Name:</label>
            <input type="text" name="name" id="txtName" placeholder="full name" value={{name}}>
        </p>

        <p>
            <label for="txtBirthdat">Birthday:</label>
            <input type="text" name="birthday" id="txtBirthday" placeholder="YYYY/MM/DD" value={{birthday}}>
        </p>

        <p>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" placeholder="xx@yy" value={{email}}>
        </p>

        <p>
            <label for="txtIntroduction">Self Introduction:</label>
            <textarea id="txtIntroduction" rows="4" cols="40" name="introduction" placeholder="briefly introduce yourself.." >{{introduction}}</textarea>
        </p>
        

        <p>
            <button type="submit" onsubmit="checkSamePasswords()">Create account</button>
        </p>
        <script>
            function checkedSamePasswords(){
                if(document.newForm.password !== document.newForm.confirmedPassword){
                    return false;
                }else{
                    return true;
                }
                

            }
        </script>
    </form>

</div>