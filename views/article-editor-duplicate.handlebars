<div class="container">
    <div>{{{article.oldContent}}}</div>
    <h1>Edit Article</h1>
    <form action="./submit-article" method="post">
        <label for="title"><h2>Title:</h2></label>
        <input type="text" id="title" class="txtbox" name="title" value="{{article.oldTitle}}"><br>
        <textarea name="content" id="articleContent" class="txtbox">{{{article.oldContent}}}</textarea>
        <button type="submit" class="btn">Post!</button>
    </form>
</div>