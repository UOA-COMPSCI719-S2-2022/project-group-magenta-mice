<div class="container">
    <div>{{../oldTitle}}</div>
    <h1>New Article</h1>
    <form action="./submit-article" method="post">
        <label for="title"><h2>Title:</h2></label>
        <input type="text" id="title" class="txtbox" name="title" value="{{this.title}}"><br>
        <textarea name="content" id="articleContent" class="txtbox">{{{oldContent}}}</textarea>
        <button type="submit" class="btn">Post!</button>
    </form>
</div>